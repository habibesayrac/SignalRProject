@model CreateDiscountDto
@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İndirim Girişi</div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Başlık Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">
                            </div>
                        </div><div class="card-body">
                            <div class="form-group">
                                <label for="Amount">İndirim Miktarı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Amount" id="Amount">
                            </div>
                        </div>                     
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description" id="Description">
                            </div>
                        </div> 
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ImageUrl">Görsel</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
                            </div>
                        </div>

                        <div class="card-action">
                            <button class="btn btn-success">İndirim Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


